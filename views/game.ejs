    <!-- Judul Halaman -->
    <title>Kertas Batu Gunting</title>
    </head>
    <body>
        <!-- Start Pembungkus Background -->
        <div id="mainScreen">
            <!-- Start Header -->
            <div class="header">
                <ul>
                    <li class="logo">
                        <a href="/" style="text-decoration:none"><h1> < </h1></a>
                    </li>

                    <li class="icon"> <img src="assets/icon.png" alt=""></li>

                    <li class="tittle"> <p>ROCK PAPER SCISSORS</p></li>
                </ul>
            </div>
            <!-- Start Header -->
                
            <!-- Start Game -->
            <div class="row">
                <div class="col">
                        
                </div>

                <div class="col-2">
                    <div class="player">
                        <ul>
                            <li id="tittle"> <p>PLAYER</p> </li>
                            <li id="player-batu" onclick="selectMe('#player-batu')"> <img src="assets/batu.png" alt=""></li>
                            <li id="player-kertas" onclick="selectMe('#player-kertas')"> <img src="assets/kertas.png" alt=""></li>
                            <li id="player-gunting" onclick="selectMe('#player-gunting')"> <img src="assets/gunting.png" alt=""></li>
                        </ul>
                    </div>
                </div>

                <div class="col-3">
                    <div id="wrapper">
                        <div class="atas">
                            <div id="versus">
                                <h1>VS</h1>
                            </div>
                        </div>

                        <div class="bawah">
                            <div id="reset">
                                <a href="/game"><img src="assets/refresh.png" alt=""></a>
                            </div>
                        </div>
                    </div>
                    
                </div>

                <div class="col-2">
                    <div class="computer">
                        <ul>
                            <li id="tittle"> <p>COMPUTER</p> </li>
                            <li id="computer-batu"> <img src="assets/batu.png" alt=""></li>
                            <li id="computer-kertas"> <img src="assets/kertas.png" alt=""></li>
                            <li id="computer-gunting"> <img src="assets/gunting.png" alt=""></li>
                        </ul>
                    </div>
                </div>
                
                <div class="col">
                        
                </div>
            </div>
                <!-- Start Game -->
        </div>
        <!-- End Pembungkus Background -->










